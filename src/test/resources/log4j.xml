<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
   <!-- ================================= -->
   <!-- Preserve messages in a local file -->
   <!-- ================================= -->
   <appender name="FILE" class="org.apache.log4j.FileAppender">
      <param name="File" value="target/aludratest-tests.log"/>
      <param name="Append" value="false"/>

      <layout class="org.apache.log4j.PatternLayout">
         <!-- The default pattern: Date Priority [Category] Message\n -->
         <param name="ConversionPattern" value="%d %-5p (%t) [%c] %m%n"/>

         <!-- The full pattern: Date MS Priority [Category] (Thread:NDC) Message\n
         <param name="ConversionPattern" value="%d %-5r %-5p [%c] (%t:%x) %m%n"/>
          -->
      </layout>
   </appender>

   <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
      <!--errorHandler class="org.jboss.logging.util.OnlyOnceErrorHandler"/-->

      <param name="Target" value="System.out"/>
      <param name="Threshold" value="info"/>

      <layout class="org.apache.log4j.PatternLayout">
         <!-- The default pattern: Date Priority [Category] Message\n -->
         <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p (%t) [%c{1}] %m%n"/>
      </layout>
   </appender>
   

   <!-- ================ -->
   <!-- Limit categories -->
   <!-- ================ -->

    <category name="org.apache">
       <priority value="warn"/>
    </category>

    <category name="org.apache.velocity">
       <priority value="info"/>
    </category>

    <category name="org.databene">
       <priority value="info"/>
    </category>

    <category name="org.databene.CONFIG">
       <priority value="debug"/>
    </category>

    <category name="org.databene.commons">
       <priority value="info"/>
    </category>

    <category name="org.aludratest">
       <priority value="debug"/>
    </category>

    <category name="org.aludratest.scheduler">
       <priority value="debug"/>
    </category>
    
    <category name="org.aludratest.impl.log4testing.observer">
       <priority value="info"/>
    </category>
    
    <category name="org.aludratest.service.gui.web.selenium.httpproxy">
       <priority value="info"/>
    </category>
    
    <category name="org.aludratest.service.gui.web.selenium.selenium2">
       <priority value="info"/>
    </category>
    
    <category name="org.aludratest.util">
       <priority value="info"/>
    </category>
    

    
   <!-- ======================= -->
   <!-- Setup the Root category -->
   <!-- ======================= -->

    <root>
        <priority value="info"/>
        <appender-ref ref="FILE"/>
    </root>

</log4j:configuration>
